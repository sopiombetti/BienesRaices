extends ../layout/index

block contenido
    div.py-10.flex.flex-col.items-center
        h1.text-4xl.my-4.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-bold.mt-3.bg-slate-300.rounded-md.w-56.p-3 Crear Cuenta

        

        .mt-8.mx-auto.w-96
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' action='/auth/registro')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-400.rounded-md(type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-400.rounded-md(type="email" name="email" value= usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-400.rounded-md(type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-2.font-bold(for="repeat_password") Repetir Contraseña
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-400.rounded-md(type="password" name="repeat_password")
                    div.flex.items-center.justify-end 
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                    
                    if errores
                        div(class="max-w-md mx-auto my-10")
                            each error in errores
                                p.text-red-500.text-xs.text-center.p-2.mb-1.font-bold=error.msg
                                
                    input(class="w-full bg-indigo-500 py-2 rounded text-white cursor-pointer hover:bg-indigo-400" type="submit" value="Crear Cuenta")